<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto">
	
	<data>
		<variable name="handler" type="studio.xmatrix.coffee.ui.admin.SignUpActivityHandler"/>
	</data>
	
	<android.support.constraint.ConstraintLayout
		android:id="@+id/linearLayout"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical">
		
		<ImageView
			android:id="@+id/signup_icon"
			android:layout_height="100dp"
			android:layout_width="100dp"
			app:layout_constraintLeft_toLeftOf="parent"
			app:layout_constraintRight_toRightOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			android:layout_marginTop="30dp"
			android:src="@drawable/ic_coffee"
			tools:ignore="ContentDescription"/>
		
		<LinearLayout
			android:id="@+id/signup_email_ly"
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			app:layout_constraintLeft_toLeftOf="parent"
			app:layout_constraintRight_toRightOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/signup_icon"
			android:paddingLeft="20dp"
			android:paddingRight="20dp"
			android:layout_marginTop="50dp"
			android:orientation="horizontal">
			
			<ImageView
				android:layout_height="30dp"
				android:layout_width="30dp"
				android:src="@drawable/ic_email"
				android:scaleType="centerInside"
				tools:ignore="ContentDescription"
				android:layout_gravity="center_vertical"
				android:layout_marginEnd="10dp"/>
			
			<EditText
				android:id="@+id/signup_email"
				android:layout_height="wrap_content"
				android:layout_width="match_parent"
				tools:ignore="Autofill,LabelFor"
				android:hint="Email"
				android:inputType="textEmailAddress"/>
		
		</LinearLayout>
		
		<LinearLayout
			android:id="@+id/signup_username_ly"
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			app:layout_constraintLeft_toLeftOf="parent"
			app:layout_constraintRight_toRightOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/signup_email_ly"
			android:paddingLeft="20dp"
			android:paddingRight="20dp"
			android:orientation="horizontal">
			
			<ImageView
				android:layout_height="30dp"
				android:layout_width="30dp"
				android:src="@drawable/ic_username"
				android:scaleType="centerInside"
				tools:ignore="ContentDescription"
				android:layout_gravity="center_vertical"
				android:layout_marginEnd="10dp"/>
			
			<EditText
				android:layout_height="wrap_content"
				android:layout_width="match_parent"
				tools:ignore="Autofill,LabelFor"
				android:hint="@string/hint_username"
				android:inputType="textPassword"/>
		
		</LinearLayout>
		
		<LinearLayout
			android:id="@+id/signup_password_ly"
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			app:layout_constraintLeft_toLeftOf="parent"
			app:layout_constraintRight_toRightOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/signup_username_ly"
			android:paddingLeft="20dp"
			android:paddingRight="20dp"
			android:orientation="horizontal">
			
			<ImageView
				android:layout_height="30dp"
				android:layout_width="30dp"
				android:src="@drawable/ic_password"
				android:scaleType="centerInside"
				tools:ignore="ContentDescription"
				android:layout_gravity="center_vertical"
				android:layout_marginEnd="10dp"/>
			
			<EditText
				android:layout_height="wrap_content"
				android:layout_width="match_parent"
				tools:ignore="Autofill,LabelFor"
				android:hint="@string/hint_password"
				android:inputType="textPassword"/>
		
		</LinearLayout>
		
		<LinearLayout
			android:id="@+id/signup_confirm_ly"
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			app:layout_constraintLeft_toLeftOf="parent"
			app:layout_constraintRight_toRightOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/signup_password_ly"
			android:paddingLeft="20dp"
			android:paddingRight="20dp"
			android:orientation="horizontal">
			
			<ImageView
				android:layout_height="30dp"
				android:layout_width="30dp"
				android:src="@drawable/ic_confirm"
				android:scaleType="centerInside"
				tools:ignore="ContentDescription"
				android:layout_gravity="center_vertical"
				android:layout_marginEnd="10dp"/>
			
			<EditText
				android:layout_height="wrap_content"
				android:layout_width="match_parent"
				tools:ignore="Autofill,LabelFor"
				android:hint="@string/hint_confirm"
				android:inputType="textPassword"/>
		
		</LinearLayout>
		
		<Button
			android:id="@+id/signup_button"
			android:layout_width="match_parent"
			android:layout_height="30dp"
			app:layout_constraintLeft_toLeftOf="parent"
			app:layout_constraintRight_toRightOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/signup_confirm_ly"
			android:layout_margin="20dp"
			android:background="@drawable/round_button"
			android:textColor="#FFFF"
			android:text="@string/signup_text"/>
	
	</android.support.constraint.ConstraintLayout>

</layout>
