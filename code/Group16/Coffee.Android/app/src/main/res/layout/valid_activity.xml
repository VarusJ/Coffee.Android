<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto">
	
	<data>
		<variable name="handler" type="studio.xmatrix.coffee.ui.admin.ValidActivityHandler"/>
	</data>
	
	<android.support.constraint.ConstraintLayout
		android:id="@+id/linearLayout"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical">
		
		<ImageView
			android:id="@+id/login_icon"
			android:layout_height="100dp"
			android:layout_width="100dp"
			app:layout_constraintLeft_toLeftOf="parent"
			app:layout_constraintRight_toRightOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			android:layout_marginTop="30dp"
			android:src="@drawable/ic_coffee"
			tools:ignore="ContentDescription"/>
		
		<TextView
			android:id="@+id/login_title"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:text="welcome to zhenly's miaomiao wu"
			app:layout_constraintLeft_toLeftOf="parent"
			app:layout_constraintRight_toRightOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/login_icon"
			android:layout_marginTop="10dp"/>
		
		<LinearLayout
			android:id="@+id/valid_email_ly"
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			app:layout_constraintLeft_toLeftOf="parent"
			app:layout_constraintRight_toRightOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/login_title"
			android:paddingLeft="20dp"
			android:paddingRight="20dp"
			android:layout_marginTop="50dp"
			android:orientation="horizontal">
			
			<ImageView
				android:layout_height="30dp"
				android:layout_width="30dp"
				android:src="@drawable/ic_email"
				android:scaleType="centerInside"
				tools:ignore="ContentDescription"
				android:layout_gravity="center_vertical"
				android:layout_marginEnd="10dp"/>
			
			<TextView
				android:id="@+id/login_username"
				android:layout_height="wrap_content"
				android:layout_width="match_parent"
				tools:ignore="Autofill,LabelFor"
				android:text="Megashow@qq.com"
				android:layout_gravity="center_vertical"
				android:textSize="18sp"
				android:textColor="@color/colorPrimaryDark"/>
		
		</LinearLayout>
		
		<LinearLayout
			android:id="@+id/login_password_ly"
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			app:layout_constraintLeft_toLeftOf="parent"
			app:layout_constraintRight_toRightOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/valid_email_ly"
			android:paddingLeft="20dp"
			android:paddingRight="20dp"
			android:orientation="horizontal">
			
			<ImageView
				android:id="@+id/login_password"
				android:layout_height="30dp"
				android:layout_width="30dp"
				android:src="@drawable/ic_valid"
				android:scaleType="centerInside"
				tools:ignore="ContentDescription"
				android:layout_gravity="center_vertical"
				android:layout_marginEnd="10dp"/>
			
			<EditText
				android:layout_height="wrap_content"
				android:layout_width="match_parent"
				tools:ignore="Autofill,LabelFor"
				android:hint="@string/hint_verification_code"
				android:inputType="textPassword"/>
		
		</LinearLayout>
		
		<Button
			android:id="@+id/login_button"
			android:layout_width="match_parent"
			android:layout_height="30dp"
			app:layout_constraintLeft_toLeftOf="parent"
			app:layout_constraintRight_toRightOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/login_password_ly"
			android:layout_margin="20dp"
			android:background="@drawable/round_button"
			android:textColor="#FFFF"
			android:text="@string/valid_text"/>
	
	</android.support.constraint.ConstraintLayout>

</layout>
