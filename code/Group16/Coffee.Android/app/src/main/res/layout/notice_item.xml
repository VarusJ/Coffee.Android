<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>

    </data>
    <android.support.design.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardUseCompatPadding="false"
            app:cardElevation="0dp"
            android:layout_margin="10dp">
        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:background="?attr/selectableItemBackgroundBorderless">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/notice_title"
                    android:text="30分钟前"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_margin="10dp"/>
            <ImageView
                    android:id="@+id/notice_new"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="@id/notice_title"
                    app:layout_constraintStart_toEndOf="@id/notice_title"
                    app:layout_constraintTop_toTopOf="@id/notice_title"
                    app:layout_constraintBottom_toTopOf="@id/notice_title"
                    android:src="@drawable/ic_dot"/>
            <ImageView
                    android:clickable="true"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_cancel"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_margin="10dp"/>
            <de.hdodenhof.circleimageview.CircleImageView
                    android:clickable="true"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:id="@+id/notice_user_avatar"
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    app:layout_constraintTop_toBottomOf="@id/notice_title"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_margin="10dp"
                    android:src="@mipmap/ic_launcher_round"/>
            <TextView
                    android:clickable="true"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:id="@+id/notice_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MegaShow"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="3dp"
                    app:layout_constraintStart_toEndOf="@id/notice_user_avatar"
                    app:layout_constraintTop_toTopOf="@id/notice_user_avatar"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="评论了你的内容"
                    app:layout_constraintStart_toEndOf="@id/notice_user_name"
                    app:layout_constraintTop_toTopOf="@id/notice_user_name"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="5dp"
            />
            <TextView
                    android:layout_marginTop="2dp"
                    android:text="你可是太强了你可是太强了你可是太强了你可是太强了你可是太强了你可是太强了你可是太强了"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    android:layout_marginEnd="20dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@id/notice_user_name"
                    app:layout_constraintTop_toBottomOf="@id/notice_user_name"/>

        </android.support.constraint.ConstraintLayout>
    </android.support.design.card.MaterialCardView>

</layout>